<section id="invoice-info">
  <h3>Invoice: </h3>
  <p>ID: <%= @invoice.id %></p>
  <p>STATUS: <%= @invoice.status %></p>
  <p>DATE ADDED: <%= @invoice.date %></p>
  <p>Total Revenue: <%= @invoice.total_revenue %></p>
</section>

<section id="customer-info">
  <h3>Customer: <%= @invoice.customer_name %> </h3>
  <ul>
    <li>Address: 123 Drury Ln</li>
    <li>Nowhere, ID 10001</li>
  </ul>
</section>

<section id="item-info">
  <table>
    <tr>
      <th>Item Name</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th colspan="2">Status</th>
    </tr>
    <tr>
    <% @invoice.invoice_items.each do |invitem| %>
      <td><%= invitem.item.name %></td>
      <td><%= invitem.quantity %></td>
      <td><%= invitem.unit_price %></td>
      <td id="form-<%= invitem.id %>">
        <%= form_with(model: [:admin, invitem], method: :patch, url: admin_invoice_item_path(invitem), local: true) do |f| %>
        <%= f.select(:status, enum_collection_for_select(InvoiceItem.statuses), selected: invitem.status) %>
        <%= button_tag 'Submit' %>
        <% end %></td>
      </tr>
    <% end %>
  </table>
</section>