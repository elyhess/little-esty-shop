<!DOCTYPE html>
<html>
  <head>
    <title>LittleEtsyShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <%# <% require 'pry'; binding.pry %> %>
    <% if admin_signed_in? %>
      <li><%= link_to 'Admin Dashboard', admin_index_path %></li>
      <li><%= link_to 'Log Out', destroy_admin_session_path, method: :delete %></li>

    <% elsif user_signed_in? %>
      <li><%= link_to 'Merchant Dashboard', merchant_dashboard_index_path(current_user.merchant) %></li>
    <% end %>


    <% if current_user %>
      <li><%= link_to 'current_user', edit_user_registration_path %></li>
      <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
    <% elsif current_admin %>
    <% else %>
      <li><%= link_to 'Sign Up', new_user_registration_path %></li>
      <li><%= link_to 'Login', new_user_session_path %></li>
    <% end %>
  </header>

  <body>
  <p class="flash">
    <% flash.each do |type, message| %>
      <p><%= message %></p>
    <% end %>
  </p>
    <%= yield %>
  </body>
</html>
