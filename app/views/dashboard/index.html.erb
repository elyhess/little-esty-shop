
<%= render 'merchant_nav' %>

<div class="columns">
  <div class="column" id="ready-to-ship">
    <p class="title has-text-centered">Items Ready to Ship</p>
    <ol>
      <% @merchant.ready_to_ship.each do |item| %>
        <li class="block is-size-5"><%= item.item_name %> - <%= item.invoice_date.strftime('%A, %b %d %Y') %>
        <p id="invoice#{item.invoice_id}">Invoice ID: <%= link_to item.invoice_id, merchant_invoice_path(@merchant.id, item.invoice_id) %></p></li>
      <% end %>
    </ol>
  </div>

  <div class="column" id="top-5-customers">
    <p class="title has-text-centered">Top 5 Customers</p>
    <ol>
      <% @merchant.top_5.each do |customer| %>
        <li class="block is-size-5"><%= "#{customer.first_name} #{customer.last_name}" %> - <%= pluralize customer.total_success, 'purchase' %></li>
      <% end %>
    </ol>
  </div>
</div>